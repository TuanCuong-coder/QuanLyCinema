
@{
    ViewBag.Title = "Thêm mới món ăn";
}

<h2>Thêm mới món ăn</h2>

<form class="registration-form" action="/Food/PostCreate" method="POST" enctype="multipart/form-data">


    <label for="ten">Tên món ăn:</label>
    <input type="text" id="ten" name="ten" required>

    <label for="gia">Giá:</label>
    <input type="number" id="gia" name="gia" required>

    <label for="hinhanh">Hình ảnh món ăn:</label>
    <input type="file" id="hinhanh" name="hinhanh" accept="image/*">

    <button type="submit">Thêm mới</button>
</form>

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script type="text/javascript">
    $('form').submit(function (e) {
        e.preventDefault(); // Ngừng gửi form thông thường
        var formData = new FormData(this);

        $.ajax({
            url: '/Food/PostCreate',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                console.log("Phản hồi từ máy chủ:", response); // Log phản hồi
                if (response.success) {
                    // Chuyển hướng người dùng đến trang đăng nhập khi đăng ký thành công
                    alert(response.message);
                    window.location.href = '/Food/Index'; 
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert('Có lỗi xảy ra khi thêm mới món ăn ');
            }
        });
    });
</script>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2C2C2C;
        color: #E0E0E0; 
        text-align: center;
    }

    h2 {
        color: #4CAF50; 
    }

    .registration-form {
        background: #3A3A3A; 
        padding: 15px;
        border-radius: 8px;
        width: 320px;
        margin: 20px auto;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    label {
        display: block;
        text-align: left;
        margin: 10px 0 5px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"],
    input[type="file"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #666;
        border-radius: 5px;
        background-color: #222;
        color: #fff;
    }

    button {
        width: 100%;
        padding: 10px;
        margin-top: 15px;
        border: none;
        border-radius: 5px;
        background-color: #4CAF50; 
        color: white;
        font-size: 16px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45A049; 
        }

</style>