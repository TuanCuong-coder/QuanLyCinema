
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/TaiKhoan.cshtml";
}

<style>
   
    .registration-form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #1c1c1c;
        border: 1px solid #333;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);
        font-family: Arial, sans-serif;
        color: #e0e0e0; 
        display: flex;
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }

        .registration-form h2 {
            color: #4caf50; 
            font-size: 24px;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .registration-form label {
            text-align: left;
            font-weight: bold;
            color: #a0a0a0; 
            margin-bottom: 5px;
        }

       
        .registration-form input[type="text"],
        .registration-form input[type="password"] {
            width: 100%;
            padding: 10px;
            background-color: #2b2b2b;
            border: 1px solid #444;
            border-radius: 5px;
            color: #fff;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .registration-form input::placeholder {
            color: #777; 
        }

        .registration-form input:focus {
            border-color: #4caf50; 
            outline: none;
            box-shadow: 0 0 8px rgba(76, 175, 80, 0.8);
        }

       
        .registration-form button {
            padding: 12px;
            background-color: #4caf50; 
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.2s;
        }

            .registration-form button:hover {
                background-color: #388e3c; 
                transform: scale(1.05);
            }

    
    .error {
        color: #f44336; 
        font-weight: bold;
        margin-top: 10px;
    }
    .login-link {
        margin-top: 15px;
        color: #ccc; 
        text-align: center;
    }

        .login-link a {
            color: #4caf50; 
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

            .login-link a:hover {
                color: #66bb6a; 
                text-decoration: underline;
            }
</style>
<form class="registration-form" action="/User/PostDangKy" method="POST" enctype="multipart/form-data">
    <h2>Đăng ký tài khoản</h2>

    <label for="username">Tên tài khoản</label>
    <input type="text" id="username" name="username" placeholder="Nhập username" required>

    <label for="password">Mật khẩu</label>
    <input type="password" id="password" name="password" required>

    <label for="email">email</label>
    <input type="text" id="email" name="email" required>

    <label for="sodienthoai">số điện thoại:</label>
    <input type="text" id="sodienthoai" name="sodienthoai" required>

    <button type="submit">Đăng Ký</button>
    <div class="login-link">
        <p>Bạn đã có tài khoản? <a href="@Url.Action("DangNhap", "User")">Đăng nhập</a></p>
    </div>
</form>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script type="text/javascript">
    $('form').submit(function (e) {
        e.preventDefault(); // Ngừng gửi form thông thường
        var formData = new FormData(this);

        $.ajax({
            url: '/User/PostDangKy',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                console.log("Phản hồi từ máy chủ:", response); // Log phản hồi
                if (response.success) {
                    // Chuyển hướng người dùng đến trang đăng nhập khi đăng ký thành công
                    alert(response.message);
                    window.location.href = '/User/DangNhap'; // Chuyển hướng đến trang đăng nhập
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert('Có lỗi xảy ra khi đăng ký.');
            }
        });
    });
</script>

